
<h2 class="page-header">등록</h2>
{{#if user}}
        <div class="alert alert-danger">이미 사용중인 계정입니다.</div> 
{{/if}}
{{#if mail}}
        <div class="alert alert-danger">이미 사용중인 이메일입니다.</div> 
{{/if}} 
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<form method="post" action="/users/register">
   <div class="form-group">
    <label>이름</label>
    <input type="text" class="form-control" placeholder="이름" name="name">
  </div>
  <div class="form-group">
    <label>아이디</label>
    <input type="text" class="form-control" placeholder="사용자 계정" name="username">
  </div>
   <div class="form-group">
    <label>이메일</label>
    <input type="email" class="form-control" placeholder="Email" name="email">
  
    <div class="form-group">
        <label>주소</label>
        <input type="text" class="form-control" placeholder="주소" name="address">
    </div>
   


   </div>
      <div class="form-group">
    <label>비밀번호</label>
    <input type="password" class="form-control" placeholder="Password" name="password">
  </div>
  <div class="form-group">
    <label>비밀번호 확인</label>
    <input type="password" class="form-control" placeholder="Password" name="password2">
  </div>
  <button type="submit" class="btn btn-default">계정 생성</button>
</form>